<%= form_for [@user, @dog], remote:true do |f| %>
  <p>
    <%= f.text_field :name, placeholder: "Dog's Name" %>
  </p>
  <p>
    <%= f.text_field :age, placeholder: "Age" %>
  </p>
  <p>
    <%= f.select :gender, ['Female', 'Male']%>
  </p>
  <p>
    <%= f.text_field :breed, placeholder: "Breed" %>
  </p>
  <p>
    <%= f.select :size, ["Toy(<10 pounds)", "Small(10-20 pounds)", "Meduim(20-40 pounds)", "Large(40-80 pounds)", "Extra Large(80+ pounds)"] %>
  </p>
  <p>
    <%= f.text_area :describtion, placehold: 'Discribe Your Dog' %>
  </p>
    Is your dog sprayed or neunered?<br>
    <%= f.radio_button :fixed, 'yes' %>Yes  <%= f.radio_button :fixed, 'no' %>No  <%= f.radio_button :fixed, 'not sure' %>Not sure <br>

    Is your dog friendly with the other dogs?
    <%= f.radio_button :friendly, 'yes' %>Yes  <%= f.radio_button :friendly, 'no' %>No  <%= f.radio_button :friendly, 'not sure' %>Not sure
  <p>
    <%= f.submit %>
  </p>

<% end %>
