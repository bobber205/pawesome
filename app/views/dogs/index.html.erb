<h2>About Your Dogs</h2>
<%= button_to 'Add Another dog' %>
<% if @user.dogs.any? %>
  <% @user.dogs.each do |dog|%>
    <div id="name">
      <p>
        <%= dog.name %>
      </p>
      <p>
        <%= dog.breed %>
      </p>
      <%= link_to 'Edit', edit_user_dog_path(@user, dog), class: 'btn btn-primary'%>
      <%= button_to 'Reomove This Dog', user_dog_path(@user, dog),method: :delete %>
    </div>

  <% end %>
<% else %>
  <p>
    Your currently have no dogs, please add your first dog below.

  </p>
  <h2>Add Dog</h2>
  <%= render 'form'%>


<% end %>
