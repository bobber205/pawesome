<div class="row">
  <div class="col-md-10 col-md-offset-1">
   
      <div class="row">
        <% @listings.each do |listing| %>
          <%= link_to listing_path(listing.id) do%>
            <div class="col-md-7 listings" style="height: 15em; margin-bottom: 0.5em; background-color: #ffffff; box-sizing: border-box;">
              <div class="row">
                <div class="col-sm-2" style='background-color: rgb(216,	221, 222); padding: 2px; height: 14.85em; margin-bottom: 0.5em;'>     
                  <% if listing.user.profile.avatar.present?%>
                    <%= image_tag(current_user.profile.avatar.url(:medium), :class => "profile-image-200")%>
                  <% else %>
                    <img src="/images/thumb/missing.png" class='profile-image-200' alt="" style="width: 99%; height: 50%" />
                  <% end %>                      
                </div>
                <div class="col-sm-10">
                  <h3><%= listing.title %></h3>
                  <p>
                    <strong><%= listing.user.profile.first_name %><span> </span></strong><%= listing.address %>
                  </p> 
                  <p>
                    <%= listing.describtion %>
                  </p>
                </div>
                
              </div>
                     
            </div>
          <% end %>
        <% end %>
        <div class="col-md-5">
          <!-- <img src="https://maps.googleapis.com/maps/api/staticmap?center=portland, oregon&size=500x600&key=AIzaSyCHJqE8WTFV0eu2F2bR32EzFBrL465BI6s"> -->
          <% my_url = "https://maps.googleapis.com/maps/api/staticmap?&size=500x600&key=AIzaSyCHJqE8WTFV0eu2F2bR32EzFBrL465BI6s" %>
          <% @listings.each do |listing| %> 
          <% my_url += "&markers=color:red|#{listing.latitude}%2C#{listing.longitude}" %>    
          <% end %>
          <%= image_tag my_url %>
          
        </div>
      </div>
  </div>
  
</div>
